<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Layouts"
             x:Class="Layouts.StackLayoutPage">

    <StackLayout Spacing="3" BackgroundColor="Black">
        <BoxView HeightRequest="100" BackgroundColor="Green"/>
        <BoxView HeightRequest="100" BackgroundColor="Yellow"/>
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="30">
            <BoxView HeightRequest="30" WidthRequest="30" BackgroundColor="White"/>
            <BoxView HeightRequest="30" WidthRequest="30" BackgroundColor="White"/>
            <BoxView HeightRequest="30" WidthRequest="30" BackgroundColor="White"/>
            <BoxView HeightRequest="30" WidthRequest="30" BackgroundColor="White"/>
        </StackLayout>
        <BoxView HeightRequest="100" BackgroundColor="Blue"/>
        <BoxView HeightRequest="50" BackgroundColor="Red"/> 
        <BoxView HeightRequest="150" BackgroundColor="Pink" VerticalOptions="FillAndExpand"/>
    </StackLayout>

</ContentPage>
